<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Musica" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_grey_200</item>
        <item name="colorPrimaryVariant">@color/md_blue_grey_300</item>
        <item name="colorOnPrimary">@color/md_black_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_grey_200</item>
        <item name="colorSecondaryVariant">@color/md_blue_grey_300</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Musica.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Musica.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"></style>

    <style name="Theme.AppCompat.Light.Dialog" parent="Base.Theme.AppCompat.Light.Dialog"/>


    <style name="Theme.Musica.PopupOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
</resources>