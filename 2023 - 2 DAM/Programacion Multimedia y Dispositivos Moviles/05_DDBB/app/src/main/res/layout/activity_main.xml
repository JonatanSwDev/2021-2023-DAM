<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/butNuevo"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:onClick="nuevo"
        android:text="@string/butNuevo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/butEliminar"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginEnd="40dp"
        android:text="@string/butEliminar"
        android:onClick="eliminar"
        app:layout_constraintBottom_toBottomOf="@+id/butNuevo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/butNuevo"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/listContactos"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butNuevo" >
    </ListView>

    <ImageView
        android:id="@+id/imgCumple"
        android:layout_width="360dp"
        android:layout_height="384dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/felicidades"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>